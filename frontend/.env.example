# Conflicto Frontend Environment Configuration

# =============================================================================
# API Configuration
# =============================================================================

# API Base URL - The base URL for the backend API
# Development: Use local backend server
# Staging: Use staging environment API
# Production: Use production API
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# Application Configuration
# =============================================================================

# Application Title - Displayed in browser title and UI
# Optional: Defaults to "Conflicto" if not specified
# Use environment-specific titles to distinguish environments
VITE_APP_TITLE=Conflicto

# =============================================================================
# Development Configuration
# =============================================================================

# Debug Mode - Enable additional logging and development features
# Only available in development builds
# VITE_DEBUG=true

# =============================================================================
# Environment Examples
# =============================================================================

# Development (default)
# VITE_API_BASE_URL=http://localhost:8000
# VITE_APP_TITLE=Conflicto (Dev)

# Staging
# VITE_API_BASE_URL=https://api-dev.conflicto.app
# VITE_APP_TITLE=Conflicto (Staging)

# Production
# VITE_API_BASE_URL=https://api.conflicto.app
# VITE_APP_TITLE=Conflicto

# =============================================================================
# Docker Environment Examples
# =============================================================================

# For Docker builds, pass environment variables as build arguments:
# docker build --build-arg VITE_API_BASE_URL=https://api.conflicto.app .

# For Docker Compose, set environment variables in docker-compose.yml:
# environment:
#   - VITE_API_BASE_URL=https://api.conflicto.app
#   - VITE_APP_TITLE=Conflicto

# =============================================================================
# CI/CD Environment Examples
# =============================================================================

# GitHub Actions: Set as repository secrets and use in workflow
# env:
#   VITE_API_BASE_URL: ${{ secrets.API_BASE_URL }}
#   VITE_APP_TITLE: Conflicto (Production)

# Terraform: Pass from infrastructure configuration
# Ensure backend CORS configuration accepts requests from frontend domain
